<Window x:Class="elQuizer_CS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="252" Width="356" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Margin="7" Grid.Column="1">
            <TextBlock TextAlignment="Center" Foreground="#FF636363">Current Question List</TextBlock>
            <Label Name="current_file_lbl" HorizontalContentAlignment="Center">[No List Selected]</Label>
            <Button Content="Practice" Margin="0,0,0,7" Height="27" Click="Button_Click_2"  />
            <Button Content="Quiz" Margin="0,0,0,7" Height="27" Click="quiz_btn_click"  />
            <Button Content="Show All Questions" Margin="0,7,0,7" Height="27" Click="Button_Click_1" />
        </StackPanel>
    </Grid>
</Window>
